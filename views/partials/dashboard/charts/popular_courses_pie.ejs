<div class="col-md-6 col-xxl-6 d-flex order-2 order-xxl-6">
  <div class="card flex-fill w-100">
    <div class="px-4 pt-3">
      <h5 class="card-title mb-0">Top Popular Courses</h5>
    </div>
    <div class="px-4 pb-4 d-flex">
      <div class="align-self-center w-100">
        <div class="py-3">
          <div class="pie-chart chart chart-xs">
            <canvas id="popular-courses-pie"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const pieElement = document.getElementById('popular-courses-pie')
  const popularCoursesPie = <%- analytics.popularCoursesPie %>;
  (async () => {
    new Chart(pieElement, {
      type: 'pie',
      data: {
        labels: popularCoursesPie.map((course) => course.title),
        datasets: [
          // * this can be toggled to show different data points
          // {
          //   label: ' Views',
          //   data: popularCoursesPie.map((course) => course.views)
          // },
          {
            label: ' %',
            data: popularCoursesPie.map((course) => course.percentage)
          },
        ]
      }
    })
  })()
</script>